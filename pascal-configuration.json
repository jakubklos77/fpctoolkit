{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "{", "}" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["'", "'"]
    ],
    "folding": {
		"markers": {
			"start": "^\\s*\\{\\$REGION(\\s\\'.*\\')?\\}",
			"end": "^\\s*\\{\\$ENDREGION\\}"
		}
	},
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(begin|if|for|while|repeat|case)\\b.*$",
        "decreaseIndentPattern": "^\\s*(end|until)\\b.*$"
    }
}