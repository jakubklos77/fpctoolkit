{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "{", "}" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["'", "'"]
    ],
    "folding": {
		"markers": {
			"start": "^\\s*\\{\\$REGION(\\s\\'.*\\')?\\}",
			"end": "^\\s*\\{\\$ENDREGION\\}"
		}
	},
    "indentationRules": {
        "increaseIndentPattern": {
            "pattern": "^\\s*(begin|repeat|case|private|public|published|protected|var|try|finally|type|uses)\\b.*$",
            "flags": "i"
        },
        "decreaseIndentPattern": {
            "pattern": "^\\s*(end)\\b.*$",
            "flags": "i"
        }
    }
}